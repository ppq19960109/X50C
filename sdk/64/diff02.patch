+static void SPI_3W_SET_Data(unsigned int Sdata)
+{
+	unsigned int i;
+	LCD_CS_CLR;
+	
+	udelay(5);
+	LCD_MOSI_SET;	//
+    udelay(1);
+	LCD_SCK_CLR; //
+    udelay(2);
+	LCD_SCK_SET;
+	udelay(2);
+	
+	for(i=8; i>0; i--)
+	{
+		if(Sdata&0x80)//1
+		{
+			LCD_MOSI_SET;
+		}
+		else
+		{
+			LCD_MOSI_CLR;
+		}
+
+		LCD_SCK_CLR; //
+		udelay(2);
+		LCD_SCK_SET;
+		udelay(1);
+		Sdata <<= 1;
+	} 
+	LCD_SCK_CLR;
+	udelay(1); 
+	
+	LCD_CS_SET;
+	udelay(5);
+}
