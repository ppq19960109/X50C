+	LCD_CS_CLR;
+	
+	LCD_SCK_CLR;
+ 	udelay(5);
+	for( x = 0 ; x < 8 ; x++)
+	{
+		LCD_SCK_CLR; 
+	    udelay(1);
+	    LCD_SCK_SET;
+	    udelay(1);
+		Value <<=1;
